<div class="container">
    <h1>Registration Form</h1>
    <form id="registerForm" asp-action="Register"  method="post">
      <label for="username"><b>Username</b></label>
      <input type="text"  asp-for="Username" placeholder="Enter your username" name="username" required/>
      
      <label for="email"><b>Email</b></label>
      <input type="text" asp-for="Email" placeholder="Enter your email" name="email" required>

    
      <label for="password"><b>Password</b></label>
      <input type="password" asp-for="Password" placeholder="Enter a password" name="password" required>
      
     <label for="confirmPassword"><b>Confirm Password</b></label>
      <input type="password" asp-for="ConfirmPassword" placeholder="Enter confirm password" name="confirmPassword" required>

      <div class="clearfix">
        <button type="submit">Register</button>
      </div>
      <div asp-validation-summary="All" class="text-danger"></div>
    </form>
  </div>
