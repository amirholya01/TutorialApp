@model TutorialApp.Core.DTOs.RegisterViewModel;
@{
    ViewData["Title"] = "Register";
}

<style>
     * {
          box-sizing: border-box;
        }
    
        body {
          font-family: Arial, sans-serif;
          background-color: #f1f1f1;
        }
    
        .container {
          max-width: 400px;
          max-height: 600px;
          padding: 20px;
          margin: 0 auto;
          margin-top: 10px;
          margin-bottom: 10px;
          background-color: #fff;
          border-radius: 30px;
        }
    
        h1 {
          text-align: center;
        }
    
        input[type="text"], input[type="password"], select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          box-sizing: border-box;
        }
    
        button {
          background-color: #4CAF50;
          color: white;
          padding: 14px 20px;
          margin: 8px 0;
          border: none;
          cursor: pointer;
          width: 100%;
        }
    
        button:hover {
          opacity: 0.8;
        }
    
        .clearfix::after {
          content: "";
          clear: both;
          display: table;
        }
      
</style>
